<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fabiao_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_fabiao_evaluation"
                android:layout_alignParentTop="true"
                >
            </android.support.v7.widget.RecyclerView>
            <com.github.fastshape.MyTextView
                android:id="@+id/tv_fabiao_evaluation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="发布"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:solidColor="@color/red_button"
                app:pressColor="@color/red_press"
                app:radius="4dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
    </com.library.base.ProgressLayout>

</LinearLayout>