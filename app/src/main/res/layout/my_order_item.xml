<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/bg_color"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="订单号:EX123123123"
            />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="拍卖中"
            android:textColor="@color/red"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color"
        />
    <LinearLayout
        android:id="@+id/ll_order_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_my_auction"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/qq"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="御见翡翠御见翡翠御见翡翠御见翡翠御见翡翠御见翡翠"
                android:layout_toRightOf="@+id/iv_my_auction"
                android:layout_marginLeft="10dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:textColor="@color/gray_33"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥97"
                android:textColor="@color/red"
                android:layout_toRightOf="@+id/iv_my_auction"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/divider_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="2018-01-01 12:12:12"
            />
        <TextView
            android:id="@+id/tv_order_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="共1件商品"
            />
        <TextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="合计:¥21"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_margin="10dp"
        >
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:radius="4dp"
            app:solidColor="@color/gray_d7"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除订单"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:radius="4dp"
            app:solidColor="@color/gray_66"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_order_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:radius="4dp"
            app:solidColor="@color/red"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_order_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:radius="4dp"
            app:solidColor="@color/red"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_order_tuikuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退款"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:radius="4dp"
            app:solidColor="@color/red"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>