<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
    <include layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <com.github.fastshape.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/gray_66"
                />
            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/gray_d7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                />
            <com.zhizhong.yujian.view.MyEditText
                android:id="@+id/et_findpwd_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:hint="请输入手机号"
                android:textColorHint="@color/gray_99"
                />
        </com.github.fastshape.MyLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_99"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <com.zhizhong.yujian.view.MyEditText
                android:id="@+id/et_findpwd_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:hint="请输入验证码"
                android:textColorHint="@color/gray_99"
                android:paddingLeft="0dp"
                app:hiddenClearIcon="true"
                />
            <TextView
                android:id="@+id/tv_findpwd_getcode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/red_button"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:ems="5"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_99"
            />
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_findpwd_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="下一步"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:solidColor="@color/red_button"
            app:pressColor="@color/red_press"
            app:radius="4dp"
            />
    </LinearLayout>

</LinearLayout>