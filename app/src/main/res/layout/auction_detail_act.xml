<?xml version="1.0" encoding="utf-8"?>
<com.library.base.ProgressLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                 xmlns:tools="http://schemas.android.com/tools"
                                 android:orientation="vertical"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:background="@color/bg_color"
                                 android:id="@id/pl_load"
    >
        <android.support.v4.widget.NestedScrollView
                android:id="@id/nsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_above="@+id/ll_bottom"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/bg_color"
                >
                <!--your view-->
                <FrameLayout
                    android:id="@+id/fl_paimai_goods_detail_banner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_paimai_goods_detail_banner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <com.github.fastshape.MyTextView
                        android:id="@+id/tv_paimai_goods_detail_banner_video"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="视频"
                        android:textColor="@color/white"
                        app:all_line="true"
                        app:borderColor="@color/gray_66"
                        app:radius="11dp"
                        app:solidColor="@color/gray_66"
                        />

                    <com.github.fastshape.MyTextView
                        android:id="@+id/tv_paimai_goods_detail_banner_image"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="图片"
                        android:textColor="@color/gray_66"
                        app:all_line="true"
                        app:borderColor="@color/gray_66"
                        app:radius="11dp"
                        app:solidColor="@color/white"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_paimai_goods_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    tools:text="今天22:00结束"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <com.github.fastshape.MyTextView
                        android:id="@+id/tv_paimai_goods_detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0元起拍"
                        android:textColor="@color/red"
                        app:borderColor="@color/red"
                        app:borderWidth="2px"
                        app:radius="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/tv_paimai_goods_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=""
                        android:textColor="@color/gray_33"
                        android:lineSpacingExtra="4dp"
                        android:textSize="15sp"
                        />
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_paimai_goods_detail_jiajia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="加价幅度:100"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前价"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/red"
                        />
                    <TextView
                        android:id="@+id/tv_paimai_goods_detail_now_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="¥234100"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/red"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_paimai_goods_detail_weiguan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="围观:222人"
                        />
                    <TextView
                        android:id="@+id/tv_paimai_goods_detail_tixing"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="提醒:20人"
                        />
                    <TextView
                        android:id="@+id/tv_paimai_goods_detail_chujia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="出价:20人"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/divider_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="出价"
                    android:paddingLeft="10dp"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/divider_color"
                    />
                 <com.library.base.view.MyRecyclerView
                     android:id="@+id/rv_paimai_goods_detail_chujia"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     >

                 </com.library.base.view.MyRecyclerView>
                <LinearLayout
                    android:id="@+id/ll_paimai_goods_detail_more_chujia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/divider_color"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="查看更多报价"
                    android:gravity="center"
                    />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/divider_color"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="2px"
                        android:background="@color/gray_66"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品详情"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />
                    <View
                        android:layout_width="15dp"
                        android:layout_height="2px"
                        android:background="@color/gray_66"
                        />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paimai_goods_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paimai_goods_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <View
                        android:layout_width="15dp"
                        android:layout_height="2px"
                        android:background="@color/gray_66"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="15dp"
                        android:layout_height="2px"
                        android:background="@color/gray_66"
                        />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_paimai_goods_detail_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
    <com.github.fastshape.MyLinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        app:top_line="true"
        app:borderWidth="2px"
        >
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_paimai_goods_detail_kefu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/kefu"
            android:gravity="center"
            android:text="客服"
            android:textSize="12sp"
            />

        <com.github.fastshape.MyTextView
            android:id="@+id/tv_paimai_goods_detail_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/collection_goods"
            android:gravity="center"
            android:text="收藏"
            android:textSize="12sp"
            />
        <LinearLayout
            android:id="@+id/ll_paimai_goods_detail_tixing"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFF3F4F6"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tixing"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提醒我"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_paimai_goods_detail_chujia"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/red"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chujia"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="出价"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </com.github.fastshape.MyLinearLayout>
    <RelativeLayout
        android:id="@+id/rl_paimai_goods_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:background="@color/title_bg"
        >
        <ImageView
            android:id="@+id/iv_paimai_goods_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/goods_back"
            />
        <TextView
            android:id="@+id/tv_paimai_goods_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="¥321312"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            />
            <ImageView
                android:id="@+id/iv_paimai_goods_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="12dp"
                android:src="@drawable/goods_share"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
    </RelativeLayout>
</com.library.base.ProgressLayout>