<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/bg_color"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical"
            >
            <!--your view-->
            <LinearLayout
                android:id="@+id/ll_update_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/gray_bg"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="当前号码:"
                    android:ems="6"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tv_update_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1888***32342"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="登录密码:"
                    android:ems="6"
                    android:textSize="14sp"
                    />
                <com.zhizhong.yujian.view.MyEditText
                    android:id="@+id/et_update_phone_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="textWebPassword"
                    android:imeOptions="actionNext"
                    android:hint="请输入密码"
                    android:paddingLeft="0dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_color"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="+86:"
                    android:ems="6"
                    android:textSize="14sp"
                    />
                <com.zhizhong.yujian.view.MyEditText
                    android:id="@+id/et_update_phone_new"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:hint="请输入手机号"
                    android:paddingLeft="0dp"
                    android:layout_marginRight="15dp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_update_phone_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:ems="5"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    app:all_line="true"
                    app:borderColor="@color/red"
                    android:textColor="@color/red"

                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divider_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="验证码:"
                    android:ems="6"
                    android:textSize="14sp"
                    />
                <com.zhizhong.yujian.view.MyEditText
                    android:id="@+id/et_update_phone_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:hint="请输入验证码"
                    android:paddingLeft="0dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divider_color"
                />
            <com.github.fastshape.MyTextView
                android:id="@+id/tv_update_phone_complete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="确定"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:solidColor="@color/red_button"
                app:pressColor="@color/red_press"
                app:radius="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>
</LinearLayout>