<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFF3F4F6"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF3F4F6"
            >
            <!--your view-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧密码:"
                android:textColor="@color/gray_66"
                android:textSize="14sp"
                android:ems="5"
                />
            <com.zhizhong.yujian.view.MyEditText
                android:id="@+id/et_update_pwd_old"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                app:solidColor="@color/white"
                android:inputType="textWebPassword"
                android:imeOptions="actionNext"
                android:hint="请输入旧密码"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:layout_marginTop="2px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码:"
                    android:textColor="@color/gray_66"
                    android:textSize="14sp"
                    android:ems="5"
                    />
                <com.zhizhong.yujian.view.MyEditText
                    android:id="@+id/et_update_pwd_new"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="textWebPassword"
                    android:imeOptions="actionNext"
                    android:hint="请输入新密码"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:layout_marginTop="2px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码:"
                    android:textColor="@color/gray_66"
                    android:textSize="14sp"
                    android:ems="5"
                    />
                <com.zhizhong.yujian.view.MyEditText
                    android:id="@+id/et_update_pwd_re"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="textWebPassword"
                    android:imeOptions="actionNext"
                    android:hint="请确认密码"
                    />
            </LinearLayout>
            <com.github.fastshape.MyTextView
                android:id="@+id/tv_update_pwd_complete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="确定"
                android:gravity="center"
                android:layout_margin="25dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:solidColor="@color/red_button"
                app:pressColor="@color/red_press"
                app:radius="4dp"
                />
        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>