<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格区间(元)"
            android:layout_margin="15dp"
            android:textSize="14sp"
            android:textColor="@color/gray_33"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <com.zhizhong.yujian.view.MyEditText
                android:id="@+id/et_goods_class_minprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="13sp"
                app:solidColor="@color/gray_bg"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:radius="5dp"
                android:hint="最低价"
                app:hiddenClearIcon="true"
                />
            <View
                android:layout_width="19dp"
                android:layout_height="3px"
                android:background="@color/divider_color"
                android:layout_margin="10dp"
                />
            <com.zhizhong.yujian.view.MyEditText
                android:id="@+id/et_goods_class_maxprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="13sp"
                app:solidColor="@color/gray_bg"
                android:inputType="number"
                android:imeOptions="actionNext"
                app:radius="5dp"
                android:hint="最高价"
                app:hiddenClearIcon="true"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_alignParentBottom="true"
    >
    <TextView
        android:id="@+id/tv_goods_class_reset"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:text="重置"
        android:background="#FF676767"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_goods_class_complete"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:text="完成"
        android:background="#FF353535"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        />
</LinearLayout>
</RelativeLayout>