<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@id/pcfl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ptr_resistance="2.1"
            android:background="@color/bg_color"
            app:ptr_ratio_of_header_height_to_refresh="1.2"
            android:layout_above="@+id/tv_address_list_add"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_address_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </android.support.v7.widget.RecyclerView>
        </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_address_list_add"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="添加新地址"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:solidColor="@color/gray_33"
            android:layout_alignParentBottom="true"
            />
    </com.library.base.ProgressLayout>
</LinearLayout>