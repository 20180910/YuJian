<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_color"
            android:layout_above="@+id/tv_select_zhifubao"
            >
            <!--your view-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="提现账号"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divider_color"
                />
            <com.library.base.view.MyRecyclerView
                android:id="@+id/rv_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.library.base.view.MyRecyclerView>
        </LinearLayout>
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_select_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="编辑"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:solidColor="@color/red_button"
            app:pressColor="@color/red_press"
            app:radius="4dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            />
    </com.library.base.ProgressLayout>
</LinearLayout>