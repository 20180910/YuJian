<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/iv_kemaihui"
            android:layout_width="85dp"
            android:layout_height="85dp"
            tools:src="@drawable/qq"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_kemaihui_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="御见翡翠"
                android:textColor="@color/gray_33"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                />
            <com.github.fastshape.MyTextView
                android:id="@+id/tv_kemaihui_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一键卖回"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                app:radius="4dp"
                app:solidColor="@color/red"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_kemaihui_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入价¥120"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_kemaihui_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还能卖"
                android:layout_above="@+id/tv_kemaihui_buy_price"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/tv_kemaihui_sales_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥97"
                android:layout_toRightOf="@+id/tv_kemaihui_text"
                android:layout_above="@+id/tv_kemaihui_buy_price"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>