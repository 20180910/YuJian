<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_color"
            android:layout_above="@+id/tv_help_center_fankui"
            >
            <!--your view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="猜你想问"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/gray_33"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divider_color"
                />
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@id/pcfl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ptr_resistance="2.1"
                app:ptr_ratio_of_header_height_to_refresh="1.2"
                >
                <com.library.base.view.MyRecyclerView
                    android:id="@+id/rv_help_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </com.library.base.view.MyRecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        </LinearLayout>
        <com.github.fastshape.MyTextView
            android:id="@+id/tv_help_center_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="@color/red"
            app:solidColor="@color/white"
            app:borderColor="@color/red"
            app:all_line="true"
            app:borderWidth="1px"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:radius="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
    </com.library.base.ProgressLayout>
</LinearLayout>