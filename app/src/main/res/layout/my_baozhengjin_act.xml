<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/bg_color"
            >
            <!--your view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/gray_33"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_my_baozhengjin_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保证金(元)"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="35dp"
                    android:background="@color/gray_99"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_my_baozhengjin_weiyue_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0.0"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="违约被扣保证金(元)"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                >
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_baozhengjin_jiaona"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="缴纳"
                    app:solidColor="@color/red"
                    android:textColor="@color/white"
                    android:gravity="center"
                    app:radius="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_baozhengjin_tixian"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="提现"
                    app:solidColor="#FFDDDDDD"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="14sp"
                    app:radius="5dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider_color"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="缴纳记录"
                android:paddingLeft="10dp"
                android:textColor="@color/red"
                android:textSize="13sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/divider_color"
                />
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@id/pcfl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ptr_resistance="2.1"
                app:ptr_ratio_of_header_height_to_refresh="1.2"
                >
                <com.library.base.view.MyRecyclerView
                    android:id="@+id/rv_baozhengjin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </com.library.base.view.MyRecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>

        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>